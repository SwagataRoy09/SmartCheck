<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#130F5D"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="#130F5D"
        >

        <ImageView
            android:outlineSpotShadowColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_10sdp"
            android:src="@drawable/main_icon"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@drawable/round"
        android:backgroundTint="#EBEAFF"
        android:orientation="vertical">

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SIGN UP"
                    android:fontFamily="@font/frescaregular"
                    android:gravity="center"
                    android:textSize="@dimen/_30sdp"
                    android:textColor="#130F5D"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeColor="#FFF"
            app:boxBackgroundColor="#FFF">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="NAME"
                android:inputType="textPersonName"
                android:backgroundTint="#fff"
                android:background="@drawable/round2"
                android:id="@+id/name"
                android:maxLines="1"
                android:gravity="left|center"
                android:textColorHint="#130F5D"
                android:fontFamily="@font/frescaregular"
                android:drawableRight="@drawable/ic_baseline_person_outline_24"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeColor="#FFF"
            app:boxBackgroundColor="#FFF"
            app:passwordToggleTint="#130F5D">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:inputType="textWebEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Email ID"
                android:backgroundTint="#fff"
                android:background="@drawable/round2"
                android:id="@+id/mail"
                android:drawableRight="@drawable/ic_baseline_mail_outline_24"
                android:textColorHint="#130F5D"
                android:fontFamily="@font/frescaregular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeColor="#FFF"
            app:boxBackgroundColor="#FFF"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#130F5D">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:inputType="textWebPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="PASSWORD"
                android:backgroundTint="#fff"
                android:background="@drawable/round2"
                android:id="@+id/password"
                android:textColorHint="#130F5D"
                android:fontFamily="@font/frescaregular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeColor="#FFF"
            app:boxBackgroundColor="#FFF"
            app:passwordToggleTint="#130F5D">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Phone Number"
                android:backgroundTint="#fff"
                android:background="@drawable/round2"
                android:id="@+id/number"
                android:drawableEnd="@drawable/ic_baseline_phone_24"
                android:textColorHint="#130F5D"
                android:fontFamily="@font/frescaregular"/>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/tv_loginbutton"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/frescaregular"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/round3"
            android:text="SIGN UP"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:textColor="#130F5D"/>

        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_1sdp"
            android:fontFamily="@font/frescaregular"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_12sdp"
            android:text="Existing User? Login"
            android:textColor="#130F5D"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:paddingVertical="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_8sdp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/google"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/fb" />
    </LinearLayout>
</LinearLayout>